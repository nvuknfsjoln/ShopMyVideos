<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>ShopMyVideos</title>
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    body {
      background-color: #121212;
      color: #f0f0f0;
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    header {
      background-color: #1e1e1e;
      padding: 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    header h1 a {
      color: #ffffff;
      text-decoration: none;
    }

    .search-bar {
      display: flex;
      align-items: center;
    }

    .search-bar input[type="text"] {
      padding: 5px;
      border: none;
      border-radius: 4px;
    }

    .search-bar button {
      margin-left: 10px;
      padding: 5px 10px;
      border: none;
      border-radius: 4px;
      background-color: #3a3a3a;
      color: #ffffff;
      cursor: pointer;
    }

    .video-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 20px;
      padding: 20px;
    }

    .video-card {
      background-color: #1e1e1e;
      border-radius: 8px;
      overflow: hidden;
      transition: transform 0.3s;
    }

    .video-card:hover {
      transform: scale(1.05);
    }

    .video-card img {
      width: 100%;
      display: block;
    }

    .video-card h3 {
      margin: 10px;
      font-size: 1em;
    }

    footer {
      background-color: #1e1e1e;
      padding: 20px;
      text-align: center;
      color: #888888;
    }
  </style>
</head>
<body>
  <header>
    <h1><a href="/">ShopMyVideos</a></h1>
    <div class="search-bar">
      <form action="/search" method="get">
        <input type="text" name="q" placeholder="Suche nach Videos..." />
        <button type="submit">Suchen</button>
      </form>
      <a href="/creator" style="margin-left: 20px; color: #ffffff;">Creator Login</a>
    </div>
  </header>

  <main>
    <section class="video-grid">
      <% videos.forEach(function(video) { %>
        <div class="video-card">
          <a href="/video/<%= video._id %>">
            <img src="<%= video.thumbnailUrl %>" alt="<%= video.title %>" />
            <h3><%= video.title %></h3>
          </a>
        </div>
      <% }); %>
    </section>
  </main>

  <footer>
    &copy; <%= new Date().getFullYear() %> ShopMyVideos. Alle Rechte vorbehalten.
  </footer>
</body>
</html>
