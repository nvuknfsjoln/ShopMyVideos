<!DOCTYPE html>
<html lang="de">
<head>
  <%- include('../partials/header') %>
  <title>Videos verwalten</title>
</head>
<body>
  <main>
    <h1>Alle Videos</h1>
    <ul>
      <% videos.forEach(video => { %>
        <li>
          <strong><%= video.title %></strong> von <%= video.creatorUsername %> – <%= video.price %> €
          <form action="/admin/videos/delete/<%= video._id %>" method="POST" style="display:inline;">
            <button type="submit">Löschen</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </main>
</body>
</html>
